<h1> Log In </h1>

<%= form_with url: login_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <%= button_tag 'Log in', class: 'btn btn-primary' %>
<% end %>
